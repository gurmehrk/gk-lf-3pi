    // INSERT THREE OFF NODES
    virtual_timer_start(2000000, led_off);
    virtual_timer_start(4000000, led_off);
    virtual_timer_start(6000000, led_off);

  =}
  
  reaction(print_hw_timer) -> disp.line0 {=
